<html>
<head>
    <script type="application/jay-headfull"  src="./tree-node" names="TreeNode, Node"></script>
    <script type="application/jay-data">
data: Node
    </script>
</head>
<body>
<div>
    <div>{name}</div>
    <jay:TreeNode props="{firstChild}"/>
    <ul>
        <li forEach="children" trackBy="id">
            <jay:TreeNode name="{name}" id="{id}" children="{children}" ref="counter1"/>
        </li>
        <li forEach="children" trackBy="id">
            <jay:TreeNode props="{.}" ref="counterTwo"/>
        </li>
    </ul>
</div>
</body>
</html>