<html>
<head>
    <script type="application/jay-data">
data:
    title: string
    things:
    -  name: string
       completed: boolean
       cost: number
       id: string
    </script>
</head>
<body>
<div>
    <h1>{title}</h1>
    <div>
        <div forEach="things" trackBy="id">
            <span style="color:green; width: 100px; display: inline-block;">{name}</span>
            <span style="color:blue; width: 100px; display: inline-block;">{cost}</span>
            <span if="completed" style="color:red; width: 100px; display: inline-block;">Done!</span>
        </div>
    </div>
</div>
</body>
</html>
