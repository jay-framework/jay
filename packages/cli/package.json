{
  "name": "jay-cli",
  "version": "1.0.0",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "scripts": {
    "build": "npm run build:js && npm run build:executable-bin",
    "build:js": "vite build",
    "build:watch": "vite build --watch",
    "build:check-types": "tsc",
    "build:executable-bin": "chmod +x dist/index.js && (cd ../../node_modules/.bin && ln -sf ../../packages/cli/dist/index.js jay-cli)",
    "clean": "rm -rf dist",
    "confirm": "npm run clean && npm run build && npm run build:check-types && npm run test",
    "test": ":",
    "test:watch": ":"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "jay-compiler": "workspace:^",
    "rollup": "^4.5.1",
    "rollup-plugin-jay": "workspace:^"
  },
  "devDependencies": {
    "@types/node": "^20.9.2",
    "jay-dev-environment": "workspace:^",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  }
}
