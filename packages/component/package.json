{
  "name": "jay-component",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:js && npm run build:types",
    "build:js": "vite build",
    "build:types": "tsup lib/index.ts --dts-only --format esm ",
    "build:check-types": "tsc",
    "clean": "rm -rf dist",
    "confirm": "npm run clean && npm run build && npm run build:check-types && npm run test",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "jay-json-patch": "workspace:^",
    "jay-reactive": "workspace:^",
    "jay-runtime": "workspace:^"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@types/node": "^20.9.0",
    "jay-dev-environment": "workspace:^",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^0.34.6"
  }
}
