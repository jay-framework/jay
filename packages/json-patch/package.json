{
  "name": "jay-json-patch",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "npm run build:js && npm run build:types",
    "build:js": "vite build",
    "build:types": "tsup lib/index.ts --dts-only --format esm",
    "build:check-types": "tsc",
    "clean": "rm -rf dist",
    "confirm": "npm run clean && npm run build && npm run build:check-types && npm run test",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "jay-list-compare": "workspace:^"
  },
  "devDependencies": {
    "@types/node": "^20.9.2",
    "jay-dev-environment": "workspace:^",
    "tsup": "^8.0.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vitest": "^0.34.6"
  }
}
