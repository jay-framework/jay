{
  "name": "@jay-framework/jay-stack-cli",
  "version": "0.11.0",
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "files": [
    "dist",
    "readme.md"
  ],
  "scripts": {
    "build": "npm run build:js && npm run build:types",
    "build:watch": "npm run build:js -- --watch & npm run build:types -- --watch",
    "build:js": "vite build",
    "build:types": "tsup lib/index.ts --dts-only --format esm",
    "build:check-types": "tsc",
    "test-definitions": "jay-cli definitions test",
    "test-runtime": "jay-cli runtime test",
    "clean": "rimraf dist",
    "confirm": "npm run clean && npm run build && npm run build:check-types && npm run test",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@jay-framework/compiler-jay-html": "workspace:^",
    "@jay-framework/compiler-shared": "workspace:^",
    "@jay-framework/dev-server": "workspace:^",
    "@jay-framework/editor-server": "workspace:^",
    "@jay-framework/fullstack-component": "workspace:^",
    "@jay-framework/plugin-validator": "workspace:^",
    "@jay-framework/stack-server-runtime": "workspace:^",
    "chalk": "^4.1.2",
    "commander": "^14.0.0",
    "express": "^5.0.1",
    "glob": "^10.3.10",
    "vite": "^5.0.11",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@jay-framework/dev-environment": "workspace:^",
    "@types/express": "^5.0.2",
    "@types/node": "^22.15.21",
    "nodemon": "^3.0.3",
    "replace-in-file": "^7.1.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  }
}
