<html>
  <head>
    <link rel="import" href="./counter" names="Counter" />
    <script type="application/yaml-jay">
      data:
          cond: boolean
          initialCount: number
          subCounters:
          -  id: string
             initialCount: number
    </script>
  </head>
  <body>
    <div>
      <Counter
        if="cond"
        title="conditional counter"
        initialCount="{initialCount}"
        id="cond"
        ref="comp1"
      />
      <Counter
        forEach="counters"
        trackBy="id"
        title="collection counter {id}"
        initialCount="{initialCount}"
        id="{id}"
        ref="comp2"
      />
    </div>
  </body>
</html>
