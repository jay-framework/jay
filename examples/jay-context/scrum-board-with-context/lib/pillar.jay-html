<html>
  <head>
    <script type="application/jay-headfull" src="./task" names="TaskProps, Task"></script>
    <script type="application/jay-headfull" src="./task.jay-html.d" names="TaskViewState"></script>
    <script type="application/jay-data">
      data:
        title: string
        taskData:
        - pillarId: string
          taskId: string
    </script>
  </head>
  <body>
    <div class="pillar">
      <h2 class="pillar-title">{title}</h2>
      <div class="task-list">
        <Task forEach="taskData" trackBy="taskId" pillarId="{pillarId}" taskId="{taskId}" ref="tasks" />
      </div>
    </div>
  </body>
</html>
