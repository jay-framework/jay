<html>
  <head>
    <script type="application/jay-headfull" src="./pillar" names="Pillar, PillarProps"></script>
    <script type="application/jay-data">
      data:
        title: string
        boardPillars:
        - pillarId: string
          pillarData: PillarProps
    </script>
  </head>
  <body>
    <div class="scrum-board">
      <h1 class="board-title">{title}</h1>
      <jay:Pillar ref="pillars" forEach="boardPillars" trackBy="id" props="{pillarData}" />
    </div>
  </body>
</html>
