<html>
  <head>
    <link rel="import" href="./tree-node" names="TreeNode, Node" />
    <script type="application/yaml-jay">
      data:
        headChar: string
        node: Node
        open: boolean
    </script>
  </head>
  <body>
    <div>
      <div ref="head">
        <span class="tree-arrow">{headChar}</span>
        <span>{node.name}</span>
      </div>
      <ul if="open">
        <li forEach="node.children" trackBy="id">
          <TreeNode props="{.}" />
        </li>
      </ul>
    </div>
  </body>
</html>
