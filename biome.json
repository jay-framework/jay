{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 4,
    "lineWidth": 100,
    "ignore": [
      "dist",
      "dist-secure",
      "build",
      "/packages/compiler/lib/expressions/expression-parser.cjs",
      "/packages/compiler/test/fixtures/**/*.html",
      "/packages/secure/test/**/*-html.d.ts",
      "/packages/secure/test/**/*-html.ts",
      "examples/**/*-html.d.ts",
      ".vscode",
      ".yarn"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
